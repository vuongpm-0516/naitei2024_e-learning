extends ../layout

block content
  .grid.grid-cols-1.gap-4.p-4(class="md:grid-cols-2 lg:grid-cols-3")
    each instructor in instructors
      a.block.bg-white.rounded-lg.shadow-md.p-4.mt-4.transition-all.duration-300.ease-in-out(
        class="hover:shadow-xl hover:scale-105 cursor-pointer"
        href=`/users/${instructor.id}`
      )
        .flex.items-center.mb-4
          .w-12.h-12.rounded-full.mr-4.overflow-hidden.flex-shrink-0
            img.w-full.h-full.object-cover(
              src= (instructor.avatar_url) ? instructor.avatar_url : '/images/default_avatar.png'
              alt=instructor.username
            )
          .flex.flex-col
            h3.font-semibold= instructor.name
            p.text-sm.text-gray-500= instructor.email
        p.text-sm.text-gray-600= instructor.about
