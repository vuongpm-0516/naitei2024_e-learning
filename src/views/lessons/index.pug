extends ../layout
include detail.pug

block content
  .d-flex.align-items-start
    #v-pills-tab.nav.flex-column.nav-tabs.me-3(
      role='tablist',
      aria-orientation='vertical',
      style='border-bottom: 0px !important; border-right: 1px solid #27374d !important; min-width: 150px'
    )
      each lesson, index in fullLessons ? fullLessons : ['There are no lesson!']
        a.nav-link.nav-link-tabs.d-flex.justify-content-between.align-items-center(
          class=lesson && lesonDetail && lesson.id === lessonDetail.id ? 'active' : '',
          href=`/courses/${courseID}/lessons/${lesson.id}`
        )
          | #{ lesson.title }
          if lesson.done
            svg.bi.bi-check-circle-fill(
              xmlns='http://www.w3.org/2000/svg',
              width='16',
              height='16',
              fill='#22c55e',
              viewBox='0 0 16 16'
            )
              path(
                d='M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z'
              )
      a.nav-link.nav-link-tabs.d-flex.justify-content-between.align-items-center(
        class=lessonDetail ? '' : 'active',
        href=`/courses/${courseID}/exam`
      )
        | #{ t('lesson.finalExam') }
    div
      +detail(lessonDetail)
